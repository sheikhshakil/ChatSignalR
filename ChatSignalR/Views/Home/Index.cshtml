@{
    ViewData["Title"] = "Home Page";
}

<section class="py-3">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header p-3">Send message</div>
                <div class="card-body p-3">
                    <fieldset id="groupBox">
                        <label class="mb-2">Join group(s)</label>
                        <select id="grp" class="form-select mb-3">
                            <option value="g1">Group-1</option>
                            <option value="g2">Group-2</option>
                            <option value="g3">Group-3</option>
                            <option value="g1&g3">Group-1 and Group-3</option>
                        </select>
                        <div class="text-center">
                            <button id="joinBtn" class="btn btn-sm btn-success">Join</button>
                        </div>
                    </fieldset>
                    <hr />
                    <fieldset id="messageBox">
                        <input id="uname" type="text" class="form-control mb-3" placeholder="Enter username" />
                        <input id="msg" type="text" class="form-control mb-3" placeholder="Enter message" />
                        
                        <div class="text-center">
                            <button id="sendBtn" class="btn btn-sm btn-success">Send</button>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header p-2">Group-1</div>
                <div class="card-body p-2">
                    <ul id="g1"></ul>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header p-2">Group-2</div>
                <div class="card-body p-2">
                    <ul id="g2"></ul>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header p-2">Group-3</div>
                <div class="card-body p-2">
                    <ul id="g3"></ul>
                </div>
            </div>
        </div>
    </div>

